<% if current_user.has_role? :admin %>
  <script>
    $("#sb_widget").click(function(){
      $(".board-top .title").text("Mensajes");
    });
   sbWidget.start('0F630D9E-5FAC-47E3-AC70-E5BC29618273');
  </script>
<% else %>
  <style>
    .btn.ic-new-chat{display: none !important;}
    .empty-item{display: none !important;}
    .top .btn.ic-leave{ display: none !important }
    .top .btn.ic-invite{ display: none !important }
    .board-top .btn.ic-option{display: none !important;}
  </style>
  <script>
    $("#sb_widget").click(function(){
      $(".board-top .title").text("Mensajes");
    });
    sbWidget.startWithConnect('0F630D9E-5FAC-47E3-AC70-E5BC29618273', '<%=current_user.id%>', '<%=current_user.username%>');
  </script>
<% end %>
