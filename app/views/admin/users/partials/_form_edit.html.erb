<div class="form-group">
	<%= f.input :username, label: "Nombre de usuario", input_html: { class: "form-control" }, required: "required" %>
</div>
<div class="form-group">
	<%= f.input :email, label: "Correo eléctronico", input_html: { class: "form-control" }, required: "required" %>
</div>
<div class="form-group">
	<%= f.input :phone, label: "Teléfono", input_html: { class: "form-control" } %>
</div>
<div class="form-group">
	<%= f.input :genre, collection: [["Masculino","m"], ["Femenino", "f"]], label: "Género", input_html: { class: "form-control" } %>
</div>
<div class="form-group">
	<%= f.input :birth_date, as: :string, label: "Fecha de nacimiento", input_html: { class: "datepicker form-control", value: @user.birth_date.strftime("%d-%m-%Y") }, required: "required" %>
</div>
<div class="form-group">
	<%= f.input :country_id, collection: Country.all, label: "País", input_html: { class: "form-control" } %>
</div>

