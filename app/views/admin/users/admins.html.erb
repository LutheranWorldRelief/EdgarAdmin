<div class="row" style="padding: 40px;">
	<div class="col-md-12">
		<%= link_to "<i class='fa fa-plus'></i> Agregar".html_safe, new_admin_admin_users_path, class: "btn btn-success float-right" %>
		<%= link_to "<i class='fa fa-arrow-left'></i> Regresar".html_safe, admin_configurations_path, class: "btn btn-secondary float-right", style: "margin-right: 5px;" %>
		<br><br>
		<div class="box">
			<table class="table table-hover">
				<thead>
					<tr>
						<th>Name</th>
						<th>Email</th>
						<th>Fecha de nacimiento</th>
						<th>Género</th>
						<th>País</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @admins.each do |admin| %>
					<tr>
						<td><%= admin.username %></td>
						<td><%= admin.email %></td>
						<td><%= admin.birth_date.strftime("%d-%m-%Y") %></td>
						<td><%= admin.genre == "m" ? "Masculino" : "Femenino" %></td>
						<td><%= admin.country.name rescue "" %></td>
						<td>
							<%= link_to "<i class='fa fa-lock'></i>".html_safe, edit_admin_password_admin_user_path(admin), class: "btn btn-warning", title: "Cambiar contraseña" %>
							<%= link_to "<i class='fa fa-edit'></i>".html_safe, edit_admin_admin_user_path(admin), class: "btn btn-warning" %>
							<%= link_to "<i class='fa fa-trash'></i>".html_safe, destroy_admin_admin_user_path(admin), method: :delete, data: { confirm: "Esta seguro de eliminar?" }, class: "btn btn-danger", title: "Eliminar" %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
<style>
	.box{
		padding: 10px;
		background: #fff;
	}
</style>
