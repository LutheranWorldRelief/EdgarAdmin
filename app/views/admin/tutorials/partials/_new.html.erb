<!-- Modal -->
<div class="modal fade" id="new_tutorial" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <%= simple_form_for @tutorial, url: admin_tutorials_path, method: :post, remote: true do |f| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Nuevo video</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= f.input :name, label: "Nombre", input_html: { class: "form-control", placeholder: "Nombre..." } %>
        </div>
        <div class="form-group">
          <%= f.input :video_link, label: "URL video...", as: :url, input_html: { class: "form-control", placeholder: "URL video" } %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <%= f.button :submit, "Guardar", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>